#Requires AutoHotkey v2.0

;   LEGEND  ;
;       >!  == Right Alt
;       *>! == Right Alt + Any Modifier
;       +>! == Right Alt + Shift

; Right Alt == >!

; Symbols ;

*>!1:: Send "¹"

*>!2:: Send "²"

*>!3:: Send "³"

*>!5:: Send "€"

*>!6:: Send "^"

*>!0:: Send "°"

*>!-:: Send "¯"

*>!;:: Send "¨"

*>!':: Send "´"

*>!t:: Send "™"

*>!r:: Send "®"

*>!c:: Send "©"

*>!,:: Send "«"

*>!.:: Send "»"

; Lowercase Letters

>!e:: Send "è"

>!u:: Send "ù"

>!i:: Send "ì"

>!o:: Send "ò"

>!a:: Send "à"

>!d:: Send "é"

>!j:: Send "ú"

>!k:: Send "í"

>!l:: Send "ó"

>!z:: Send "á"

>!n:: Send "ñ"


